<div class="sp">
  <% if @box.links.any? %>
    <ul class="box">
      <% @box.links.each do |link| %>
        <li class="box--link">
  
          <a href="<%= link.url %>"><%= link.name %></a>
  
          <a href="/box/links/<%= link.id %>">Edit</a>
  
          <form method="post" action="/box/links/<%= link.id %>">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="destroy" >
          </form>
  
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>
      No links added yet!
    </p>
  <% end %>
</div>

<a href="/box/links/create" class="btn btn--inline">Add Link</a>
